<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/testCardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="#E2E2E2"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorBlack"
            android:textSize="26sp" />

        <View
            android:id="@+id/lineUnderTitleView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/titleView"
            android:layout_alignRight="@id/titleView"
            android:layout_below="@id/titleView"
            android:layout_marginTop="8dp"
            android:background="@color/colorCharcoal" />

        <TextView
            android:id="@+id/reservationTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lineUnderTitleView"
            android:layout_below="@id/lineUnderTitleView"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textColor="@color/colorCharcoal"
            android:textSize="17sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>




