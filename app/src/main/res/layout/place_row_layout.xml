<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeCardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#F9F9F9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/placeNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorBlack"
            android:textSize="26sp" />

        <View
            android:id="@+id/lineUnderTitleId"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignRight="@id/placeNameView"
            android:layout_below="@id/placeNameView"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@id/placeNameView"
            android:background="@color/colorCharcoal" />

        <TextView
            android:id="@+id/placeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lineUnderTitleId"
            android:layout_below="@id/lineUnderTitleId"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textColor="@color/colorCharcoal"
            android:textSize="17sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
